@model IdentityMvcDemo.Models.LoginViewModel2
@{
    ViewBag.Title = "Login";
    var getValidateCode = Url.Action("GetValidateCode", "Account");
}

<h2>Login</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
<table>
    <tr>
        <td>@Html.LabelFor(m => m.UserName)</td>
        <td>@Html.EditorFor(m => m.UserName)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Password)</td>
        <td>@Html.EditorFor(m => m.Password)</td>
    </tr>
    <tr>
        <td>
            <img id="imgCode"
                 src="@getValidateCode"
                 style="cursor: pointer; vertical-align: middle"
                 alt="ValidateCode" />
        </td>
        <td>@Html.EditorFor(m => m.ValidateCode)</td>
    </tr>
    <tr>
        <td></td>
        <td><button style="width: 100%">Login</button></td>
    </tr>
</table>
}

@Html.ActionLink("Register", "Register")
